# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# ============================================
# APPLICATION CONFIGURATION
# ============================================
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="Stocklio"
NODE_ENV="development"

# ============================================
# API KEYS - FINANCIAL DATA PROVIDERS
# ============================================
# Alpha Vantage API (Free tier: 5 calls/minute, 500 calls/day)
# Get your free API key at: https://www.alphavantage.co/support/#api-key
ALPHA_VANTAGE_API_KEY="your_alpha_vantage_api_key_here"

# Financial Modeling Prep (Free tier: 250 calls/day)
# Get your free API key at: https://financialmodelingprep.com/developer/docs
FMP_API_KEY="your_fmp_api_key_here"

# Polygon.io (Free tier: 5 calls/minute)
# Get your free API key at: https://polygon.io/
POLYGON_API_KEY="your_polygon_api_key_here"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your_nextauth_secret_here_generate_a_secure_random_string"

# JWT Secret for API authentication
JWT_SECRET="your_jwt_secret_here_generate_a_secure_random_string"

# ============================================
# CACHE CONFIGURATION
# ============================================
# Redis (if using Redis for caching)
REDIS_URL="redis://localhost:6379"

# Cache TTL (Time To Live) in seconds
CACHE_TTL_STOCK_DATA=300      # 5 minutes
CACHE_TTL_PORTFOLIO=60       # 1 minute
CACHE_TTL_DIVIDENDS=3600     # 1 hour

# ============================================
# RATE LIMITING
# ============================================
# API Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# ============================================
# EXTERNAL SERVICES
# ============================================
# Email service (if implementing email notifications)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your_email@gmail.com"
SMTP_PASS="your_app_password"

# ============================================
# DEVELOPMENT & DEBUGGING
# ============================================
# Enable debug logging
DEBUG="stocklio:*"

# Enable API logging
LOG_API_CALLS=true

# Mock data for development
USE_MOCK_DATA=false
